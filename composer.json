{
    "name": "setono/post-nord-php-sdk",
    "type": "library",
    "description": "A PHP SDK for the PostNord API",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk"
        }
    ],
    "require": {
        "php": "^7.2",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0.1",
        "thecodingmachine/safe": "^1.0"
    },
    "require-dev": {
        "kriswallsmith/buzz": "^1.0",
        "nyholm/psr7": "^1.1",
        "phpspec/phpspec": "^6.2",
        "phpunit/phpunit": "^8.5",
        "setono/code-quality-pack": "^1.2.1"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\PostNord\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Setono\\PostNord\\": "tests/"
        }
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": [
            "vendor/bin/phpstan analyse -c phpstan.neon -l max src",
            "vendor/bin/psalm"
        ],
        "check-style": "vendor/bin/ecs check --ansi src/ tests/ spec/",
        "fix-style": "vendor/bin/ecs check --fix --ansi src/ tests/ spec/",
        "phpspec": "vendor/bin/phpspec run",
        "phpunit": "vendor/bin/phpunit",
        "test": [
            "@phpspec",
            "@phpunit"
        ]
    }
}
