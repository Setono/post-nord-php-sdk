{
    "name": "setono/post-nord-php-sdk",
    "type": "library",
    "description": "A PHP SDK for the PostNord API",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk"
        }
    ],
    "require": {
        "php": "^7.2",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "thecodingmachine/safe": "^0.1.15"
    },
    "require-dev": {
        "kriswallsmith/buzz": "^1.0",
        "localheinz/composer-normalize": "^1.1",
        "nyholm/psr7": "^1.1",
        "phpstan/phpstan": "^0.10.3",
        "phpunit/phpunit": "^8.0",
        "symplify/easy-coding-standard": "^5.1",
        "thecodingmachine/phpstan-safe-rule": "^0.1.3"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\PostNord\\": "src/"
        }
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": "./vendor/bin/phpstan analyse -c phpstan.neon -l max src",
        "check-style": "./vendor/bin/ecs check --ansi src/ tests/",
        "fix-style": "./vendor/bin/ecs check --fix --ansi src/ tests/",
        "test": "./vendor/bin/phpunit"
    }
}
