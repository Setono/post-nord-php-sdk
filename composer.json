{
    "name": "setono/post-nord-php-sdk",
    "type": "library",
    "description": "A PHP SDK for the PostNord API",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk"
        }
    ],
    "require": {
        "php": "^7.2",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "thecodingmachine/safe": "^1.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.0",
        "korbeil/phpstan-generic-rules": "^0.2",
        "kriswallsmith/buzz": "^1.0",
        "nyholm/psr7": "^1.1",
        "phpspec/phpspec": "^5.1 || ^6.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-strict-rules": "^0.12",
        "phpunit/phpunit": "^8.0",
        "sylius-labs/coding-standard": "^3.1",
        "thecodingmachine/phpstan-safe-rule": "^1.0beta"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\PostNord\\": "src/"
        }
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": "./vendor/bin/phpstan analyse -c phpstan.neon -l max src",
        "check-style": "./vendor/bin/ecs check --ansi src/ tests/ spec/",
        "fix-style": "./vendor/bin/ecs check --fix --ansi src/ tests/ spec/",
        "test": [
            "./vendor/bin/phpspec run",
            "./vendor/bin/phpunit"
        ]
    }
}
